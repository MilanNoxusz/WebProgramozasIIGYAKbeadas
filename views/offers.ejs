<%- include('header') %>

<style>
    .food_section .box .img-box {
        height: 150px; 
        width: 100%;
        border-radius: 15px 15px 0 0; 
        overflow: hidden; 
        padding: 0; 
        margin: 0;
        background: #f1f2f3; 
    }

    .food_section .box .img-box img {
        width: 100%;
        height: 100%;
        object-fit: cover; 
        border-radius: 15px 15px 0 0;
        transition: all 0.3s; 
    }

    .food_section .box:hover .img-box img {
        transform: scale(1.1);
    }
</style>
<section class="food_section layout_padding">
  <div class="container">
    
    <div class="heading_container heading_center">
      <h2>
        Dante Ajánlata
      </h2>
      <p>
        Válogatás a kemence legjavából, egyenesen az asztalodra
      </p>
      
      <div style="margin-top: 20px;">
        <a href="<%= appPath %>/offers" class="btn btn-warning" style="color: white; font-weight: bold; border-radius: 25px; padding: 10px 25px;">
            <i class="fa fa-refresh" aria-hidden="true"></i> Másikat kérek!
        </a>
      </div>
    </div>

    <div class="filters-content" style="margin-top: 40px;">
      <div class="row grid">
        
        <% pizzas.forEach(function(pizza) { %>
          <div class="col-sm-6 col-lg-4 all">
            <div class="box">
              <div>
                <div class="img-box">
                   <% if(pizza.vegetarianus) { %>
                       <img src="<%= appPath %>/images/pizza-vega.jpg" alt="Vega Pizza" style="width: 100%; height: 100%; object-fit: cover;">
                   <% } else { %>
                       <img src="<%= appPath %>/images/pizza-meat.jpg" alt="Húsos Pizza" style="width: 100%; height: 100%; object-fit: cover;">
                   <% } %>
                </div>
                <div class="detail-box">
                  <h5>
                    <%= pizza.nev %>
                  </h5>
                  <p>
                    <strong>Kategória:</strong> <%= pizza.kategorianev %> <br>
                    <% if(pizza.vegetarianus) { %>
                      <span class="badge badge-success" style="background-color: #28a745;">Vegetáriánus</span>
                    <% } else { %>
                       <span class="badge badge-secondary" style="background-color: #6c757d;">Húsos</span>
                    <% } %>
                  </p>
                  
                  <div class="options">
                    <h6>
                      <%= pizza.ar %> Ft
                    </h6>
                    <a href="<%= appPath %>/messages">
                       <i class="fa fa-shopping-cart text-white"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>

      </div>
    </div>

    <div class="heading_container heading_center" style="margin-top: 80px; margin-bottom: 30px;">
       <h3>
         Legutóbbi Rendelések
       </h3>
    </div>

    <div class="table-responsive shadow-sm p-3 mb-5 bg-white rounded">
        <table class="table table-hover">
            <thead style="background-color: #222831; color: white;">
                <tr>
                    <th>#ID</th>
                    <th>Pizza Neve</th>
                    <th>Mennyiség</th>
                    <th>Felvétel</th>
                    <th>Kiszállítás</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(function(order) { %>
                    <tr>
                        <td>#<%= order.id %></td>
                        <td style="font-weight: bold; color: #222831;"><%= order.pizzanev %></td>
                        <td><%= order.darab %> db</td>
                        <td><%= new Date(order.felvetel).toLocaleTimeString('hu-HU', {hour: '2-digit', minute:'2-digit'}) %></td>
                        <td><%= new Date(order.kiszallitas).toLocaleTimeString('hu-HU', {hour: '2-digit', minute:'2-digit'}) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

  </div>
</section>

<%- include('footer') %>